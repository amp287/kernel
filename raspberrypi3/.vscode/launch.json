{
    "inputs": [
        {
            "id": "test_name",
            "description": "Name of the test to run",
            "default": "",
            "type": "promptString"
        },
    ],
    "configurations": [
        {
            "name": "Debug Kernel",
            "type": "lldb",
            "request": "custom",
            "targetCreateCommands": ["target create ${workspaceFolder}/target/aarch64-unknown-none/debug/kernel"],
            "processCreateCommands": ["gdb-remote localhost:3333"],
            "preLaunchTask": "Kernel GDB"
        },
        {
            "name": "Debug test",
            "type": "lldb",
            "request": "custom",
            "targetCreateCommands": ["target create ${workspaceFolder}/vscode_tests/${input:test_name}_test"],
            "processCreateCommands": ["gdb-remote localhost:3333"],
            "preLaunchTask": "test_gdb",
            "postDebugTask": "kill_qemu"
        },
        {
            "name": "Test",
            "type": "lldb",
            "request": "custom",
            "targetCreateCommands": ["target create ${command:'echo ${input:test_name}'"],
            "processCreateCommands": ["gdb-remote localhost:3333"],
        }


    ]
}
